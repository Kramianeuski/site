{{ header }}
<style>
@media (min-width: 1200px) {
    #information-configurations .rm-module-col {
        -ms-flex:0 0 25%;
        flex: 0 0 25%;
        max-width: 25%
    }
}

#information-configurations .rm-module-title {
    text-align: center;
}
